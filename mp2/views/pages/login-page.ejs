    <%- include('../fragments/header.ejs') %>
    <section id="my-contact" class="py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-6">
                    <h2 class="display-5">Zaloguj się</h2>
                    <p id="errorMessageLogin" class="text-danger"></p>
                    <form action="/rentals" id="loginForm" novalidate onsubmit="return validateForm(event);">
                        <div class="form-group mt-3">
                            <label for="login">Login</label>
                            <input type="text" id="login" class="form-control" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="password">Hasło</label>
                            <input type="password" id="password" class="form-control" required>
                        </div>
                        <div class="row">
                            <div class="col-md-4 offset-md-4">
                                <button type="submit" class="btn btn-dark btn-lg w-100 mt-4">Logowanie</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6 mt-5 mt-md-0">
                    <h2 class="display-5">Zarejestruj się</h2>
                    <p id="errorMessageRegister" class="text-danger"></p>
                    <form id="registerForm" novalidate onsubmit="return validateForm(event);">
                        <div class="form-group mt-3">
                            <label for="createLogin">Login</label>
                            <input type="text" id="createLogin" class="form-control" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="createPassword">Hasło</label>
                            <input type="password" id="createPassword" class="form-control" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="repeatPassword">Powtórz hasło</label>
                            <input type="password" id="repeatPassword" class="form-control" required>
                        </div>
                        <div class="row">
                            <div class="col-md-4 offset-md-4">
                                <button type="submit" class="btn btn-dark btn-lg w-100 mt-4">Rejestracja</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
